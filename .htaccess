# 防止直接访问data目录
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# 禁止访问data目录下的所有文件
<Directory "data">
    Deny from all
</Directory>

# 防止访问JSON配置文件
<FilesMatch "\.json$">
    Order allow,deny
    Deny from all
</FilesMatch>

# 允许访问PHP文件
<FilesMatch "\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>
